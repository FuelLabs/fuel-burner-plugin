{
  "compilerOptions": {
    "lib": [
      "dom",
      "es6",
      "esnext"
    ],
    "module": "esnext",
    "declaration": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "jsx": "react",
    "target": "esnext",
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "src",
    "outDir": "./dist"
  },
  "include": [
    "src"
  ]
}
